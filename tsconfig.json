{
  "compilerOptions": {
    "outDir": "./.dist/",
    "moduleResolution": "bundler",
    "module": "ES2022",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "allowJs": true,
    "lib": [
      "ES2021"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@structured-growth/microservice-sdk"
    ]
  },
  "include": [
    "database",
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}